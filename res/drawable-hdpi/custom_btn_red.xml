<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#8A1B1B" />
             <gradient 
               	 android:angle="-90"   
                 android:startColor="#641414"
                 android:endColor="#A42120"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#8A1B1B" />
             <solid  android:color="#B12323"/>       
         </shape>
     </item>	
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#8A1B1B" />
             <gradient 
               	 android:angle="-90"   
                 android:startColor="#F0302F"
                 android:endColor="#B12323" />            
         </shape>
     </item>
</selector>